# =============================================================================
# Scoliologic Patient App - Environment Variables Template
# =============================================================================
# Скопируйте этот файл в .env и заполните значения
# cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# База данных PostgreSQL
# -----------------------------------------------------------------------------
POSTGRES_USER=scoliologic
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=scoliologic_db
DATABASE_URL=postgresql://scoliologic:CHANGE_ME_SECURE_PASSWORD@postgres:5432/scoliologic_db
DATABASE_SSL=false

# -----------------------------------------------------------------------------
# Безопасность
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET_MIN_32_CHARS
SESSION_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET_MIN_32_CHARS

# -----------------------------------------------------------------------------
# ЕСИА (Госуслуги) - ОБЯЗАТЕЛЬНО для авторизации
# -----------------------------------------------------------------------------
ESIA_CLIENT_ID=your_esia_client_id
ESIA_CLIENT_SECRET=your_esia_client_secret
ESIA_REDIRECT_URI=https://app.scoliologic.ru/api/auth/esia/callback
ESIA_SCOPE=openid fullname snils
ESIA_ENVIRONMENT=test

# -----------------------------------------------------------------------------
# МИС интеграция - ОБЯЗАТЕЛЬНО для данных пациентов
# -----------------------------------------------------------------------------
MIS_API_URL=https://mis.scoliologic.ru/api
MIS_API_KEY=your_mis_api_key

# -----------------------------------------------------------------------------
# Ollama AI
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TIMEOUT=60000

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379

# -----------------------------------------------------------------------------
# GitOps Pull-агент (опционально)
# -----------------------------------------------------------------------------
GIT_REPO_URL=https://github.com/sileade/scoliologic-app.git
GIT_BRANCH=main
GIT_TOKEN=your_github_personal_access_token
CHECK_INTERVAL=300
AUTO_DEPLOY=true
ROLLBACK_ON_FAILURE=true

# -----------------------------------------------------------------------------
# Уведомления (опционально)
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
SLACK_WEBHOOK_URL=

# -----------------------------------------------------------------------------
# Firebase Push Notifications (опционально)
# -----------------------------------------------------------------------------
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=

# -----------------------------------------------------------------------------
# Traefik (если используется)
# -----------------------------------------------------------------------------
ACME_EMAIL=admin@scoliologic.ru
TRAEFIK_AUTH=admin:$apr1$...

# -----------------------------------------------------------------------------
# Мониторинг (если используется)
# -----------------------------------------------------------------------------
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_SECURE_PASSWORD
