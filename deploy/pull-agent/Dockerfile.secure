FROM python:3.11-slim

LABEL maintainer="Scoliologic <dev@scoliologic.ru>"
LABEL description="GitOps Pull Agent for automatic deployment (Secure Version)"
LABEL version="2.0"

# Установка зависимостей
# НЕ устанавливаем docker.io - используем только docker-compose CLI
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    docker-compose \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Создание непривилегированного пользователя
RUN useradd -m -s /bin/bash agent && \
    mkdir -p /app/data /app/repo && \
    chown -R agent:agent /app

# Создание рабочей директории
WORKDIR /app

# Копирование файлов агента
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt flask

COPY pull_agent_secure.py .
COPY docker_proxy.py .
COPY config.py .
COPY notifier.py .
COPY healthcheck.py .

# Права на выполнение
RUN chmod +x pull_agent_secure.py docker_proxy.py

# Переменные окружения по умолчанию
ENV PYTHONUNBUFFERED=1
ENV CHECK_INTERVAL=300
ENV AUTO_DEPLOY=true
ENV ROLLBACK_ON_FAILURE=true
ENV ALLOWED_SERVICES=app
ENV PROTECTED_SERVICES=postgres,redis,ollama

# Переключение на непривилегированного пользователя
# Закомментировано т.к. нужен доступ к docker socket
# USER agent

# Health check
HEALTHCHECK --interval=60s --timeout=10s --retries=3 \
    CMD python healthcheck.py || exit 1

# Запуск безопасной версии агента
CMD ["python", "pull_agent_secure.py"]
